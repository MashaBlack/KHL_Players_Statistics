.container
  %footer.d-flex.flex-wrap.justify-content-between.align-items-center.py-3.my-4.border-top
    %p.col-md-4.mb-0.text-muted
      = t('.dev_msg')
      %br>/
      = t('.author')
    %a.col-md-4.d-flex.align-items-center.justify-content-center.mb-3.mb-md-0.me-md-auto.link-dark.text-decoration-none{:href => "#"}
      = image_tag(t('.logo'), alt: "Logo", height: "40", width: "40")
      -# %img{:alt => "Logo", :height => "30", :src => "assets/pictures/khl_logo_rus.png", :width => "30"}/
    %ul.nav.col-md-4.justify-content-end
      %li.nav-item
        %a.nav-link.px-2.text-muted{:href => about_path} 
          = t('.about')
      %li.nav-item
        %a.nav-link.px-2.text-muted{:href => contacts_path} 
          = t('.contact')
